@model IEnumerable<NZWalks.UI.Models.DTO.WalkDto>

@{
}

<h1 class="mt-3">Walks</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="d-flex justify-content-end">
    <a class="btn btn-success" asp-controller="Walks" asp-action="Add">Add Walks</a>
</div>

<th> </th>

<div class="search-container">
    <input type="text" id="search-input" placeholder="Search...">
</div>



<table class="table table-bordered">
    <thead>
        <tr>
            <th class="sortable" data-column="Id">
                <div>
                    ID
                    <div class="sort-icons">
                        <i class="fas fa-sort-up up-arrow"></i>
                        <i class="fas fa-sort-down down-arrow"></i>
                    </div>
                </div>
            </th>
            <th class="sortable" data-column="Name">
                <div>
                    Name
                    <div class="sort-icons">
                        <i class="fas fa-sort-up up-arrow"></i>
                        <i class="fas fa-sort-down down-arrow"></i>
                    </div>
                </div>
            </th>
            <th class="sortable" data-column="Description">
                Description <span class="sort-icon"></span>
            </th>
            <th class="sortable" data-column="LengthInKm">
                LengthInKm <span class="sort-icon"></span>
            </th>
            <th class="sortable" data-column="WalkImageUrl">
                WalkImageUrl <span class="sort-icon"></span>
            </th>
            <th class="sortable" data-column="DifficultyId">
                DifficultyId <span class="sort-icon"></span>
            </th>
            <th class="sortable" data-column="RegionId">
                RegionId <span class="sort-icon"></span>
            </th>
            <th> </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Name</td>
                <td>@walk.Description</td>
                <td>@walk.LengthInKm</td>
                <td>@walk.WalkImageUrl</td>
                <td>@walk.DifficultyId</td>
                <td>@walk.RegionId</td>
                <td>
                    <a asp-controller="Walks" asp-action="Edit" asp-route-id="@walk.Id"
                       class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>



</table>



